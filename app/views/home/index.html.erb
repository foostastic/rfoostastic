<!-- Ranking -->
<div class="container">
  <h1>Ranking</h1>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Pos</th>
        <th>Name</th>
        <th>Valuation</th>
      </tr>
    </thead>
    <% @ranking.each_with_index do |user, i| %>
      <tr class="<%= "bold" if user == @_current_user %>">
        <td class="col-md-1"><%= i + 1 %></td>
        <td class="col-md-9"><%= user.username %></td>
        <td class="col-md-2">
          <%= user.get_total_value %>
          <% if user_value_changed_today? user and user.get_diff_value_on_last_change != 0 %>
            <% if user.get_diff_value_on_last_change >= 0 %>
              <span style='color: green;'><i class='glyphicon glyphicon-arrow-up'></i> <%= user.get_diff_value_on_last_change %></span>
            <% else %>
              <span style='color: red;'><i class='glyphicon glyphicon-arrow-down'></i> <%= user.get_diff_value_on_last_change %></span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
